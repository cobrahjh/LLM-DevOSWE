# Relay Service Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# SERVER
# ===========================================

# Port for relay service
PORT=8600

# ===========================================
# SECURITY
# ===========================================

# API key for authentication (leave empty for localhost bypass)
HIVE_API_KEY=

# Allowed origins for CORS (comma-separated, empty = all)
ALLOWED_ORIGINS=

# ===========================================
# DATABASE
# ===========================================

# SQLite database path (relative to relay directory)
DB_PATH=./tasks.db

# ===========================================
# LLM INTEGRATION
# ===========================================

# Auto-responder LLM backend
LLM_BACKEND=lmstudio

# Ollama URL for auto-responder
OLLAMA_URL=http://localhost:11434

# LM Studio URL for auto-responder
LMSTUDIO_URL=http://localhost:1234

# ===========================================
# TIMEOUTS
# ===========================================

# Consumer heartbeat timeout (ms)
CONSUMER_TIMEOUT=30000

# Task processing timeout (ms)
TASK_TIMEOUT=300000

# ===========================================
# CLEANUP
# ===========================================

# Auto-cleanup completed tasks after (hours)
CLEANUP_AFTER_HOURS=24

# Max dead letters before cleanup
MAX_DEAD_LETTERS=100
